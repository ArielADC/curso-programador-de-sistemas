function calcularMediaLoop(array) {
    
    
    

    let soma = 0;
    

    for (let i = 0; i < array.length; i++) {
        soma += array[i];
    }
    

    const media = soma / array.length;
    
    return media;
}


const numeros = [10, 20, 30, 40, 50];
console.log("A média é:", calcularMediaLoop(numeros)); 

console.log(calcularMediaLoop([1, 2, 3, 4, 5]))

console.log(calcularMediaLoop([10, 20, 30, 40, 50]))

console.log(calcularMediaLoop( [5, 5, 5, 5, 5]))

console.log(calcularMediaLoop([]))